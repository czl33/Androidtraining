    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="theme_org" parent="AppTheme">
        <item name="colorPrimary">#F89700</item>
        <item name="colorPrimaryDark">#D39A0E</item>
        <item name="colorAccent">#80ee9c18</item>
    </style>

    <style name="theme_grass" parent="AppTheme">
        <item name="colorPrimary">#30F306</item>
        <item name="colorPrimaryDark">#52E230</item>
        <item name="colorAccent">#8063d64a</item>
    </style>
    <style name="MyExpanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="MyCollapsed" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>


